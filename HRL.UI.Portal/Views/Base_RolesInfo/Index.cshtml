<div class="bjui-pageContent tableContent">
    <table data-toggle="tablefixed" data-width="100%" data-nowrap="true">
        <thead>
            <tr>
                <th align="center" >@GlobalLngResource.GetRes("RoleName", "Base_RolesInfo")</th>
                <th align="center" data-order-field="OrderBy">@GlobalLngResource.GetRes("OrderBy", "Base_RolesInfo")</th>
                <th align="center" style="display:none"></th>
            </tr>
        </thead>
        <tbody id="apbody">
            @foreach (var temp in resList)
            {
                <tr ondblclick="javascript: $('#detail', this).click();">
                    <td>@temp.RoleName</td>
                    <td>@temp.OrderBy</td>
                    <td style="display:none">
                        <a href="@Url.Action("Detail/" + temp.Id, "Base_RolesInfo")" id="detail" class="btn btn-blue" data-toggle="dialog" data-width="750" data-height="350" data-id="dialog-mask" data-mask="true" data-title="@GlobalLngResource.GetRes("Detail")"></a>
                        <a href="@Url.Action("Edit/" + temp.Id, "Base_RolesInfo")" id="edit" class="btn btn-green" data-toggle="dialog" data-width="750" data-height="350" data-id="dialog-mask" data-mask="true" data-title="@GlobalLngResource.GetRes("Edit")"></a>
                        <a href="@Url.Action("Delete/" + temp.Id, "Base_RolesInfo")" id="delete" class="btn btn-red" data-toggle="doajax" data-confirm-msg="@GlobalLngResource.GetRes("DeleteSingleAlert")" data-callback="onDeleteSuccess">@GlobalLngResource.GetRes("Delete")</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
