                </tr>
                <tr>
                    <td colspan="2">
                        <label class="control-label x120">@GlobalLngResource.GetRes("_ComplainType", "Bus_EffciencyComplain")：</label>
                        <select data-toggle="selectpicker" id="ComplainType" name="ComplainType">
