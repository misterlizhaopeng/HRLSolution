            $(this).dialog('refresh');
        }
        //关闭子dialog,刷新父dialog,dialog-mask是父dialog ID
        function onRefreshParentDialog() {
            $(this).dialog('closeCurrent');
            $(this).dialog('refresh', 'dialog-mask');
        }
        function onEditSuccuss(data) {
            if (data.statusCode == "300") {
                $(this).alertmsg('error', data.message);
            }
            else if (data.statusCode == "200") {
                $(this).alertmsg('ok', data.message);
                $(this).dialog('closeCurrent');
                //$(this).dialog('refresh');
                $(this).navtab('reload');
            } else {
                //dialog - mask
                $(this).dialog('closeCurrent');
                //$.CurrentDialog.close();
                $(this).navtab('reloadFormByCurrentStatus', false);
                //$.CurrentNavtab.reload();
            }
        }

        function onEditSuccussTab(data) {
